<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MinskGuide.XF.Pages.ActivitiesListPage">
    <ListView ItemsSource="{Binding ActivitiesList}"
            CachingStrategy="RecycleElement">
            
    <!--Built in Cells-->
    <ListView.ItemTemplate>
      <DataTemplate>
                <ViewCell Height="600">
                    <StackLayout Orientation="Horizontal" HeightRequest="600">
                        <Label Text="{Binding Name}" VerticalOptions="FillAndExpand" HorizontalOptions="Start" VerticalTextAlignment="Center"/>
                        <Label Text="{Binding Address}" VerticalOptions="FillAndExpand" HorizontalOptions="End" VerticalTextAlignment="Center"/>
                    </StackLayout>
                </ViewCell>
      </DataTemplate>
    </ListView.ItemTemplate>
    
